extends _layout

block vars
  - var pageTitle = "Home page";
  - var pageClass = "";
  - var pageActive = "homepage";

block content
  //.webp-img(data-webp="./img/Rectangle5.webp" data-img="./img/Rectangle5.jpg")

    picture
      source(srcset="./img/logo.webp" type="image/webp")
      source(srcset="./img/logo.jpg" type="image/png")
      img(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="img")

  div.main-wrap

    .top-block.b-lazy.webp-img(data-webp="./img/top-bg.webp" data-img="./img/top-bg.png")
      .top-block__inner.site-container
        .top-block__top-line
          .top-block__phone
            a(href="tel:88003012803") 8 (800) 301-28-03
            span анонимно, бесплатно, круглосуточно
          .top-block__address г. Москва, ул. Олеко Дундича, 25
        .top-block__title Лечение алкоголизма, наркомании <br> и психических расстройств
        .top-block__caption в медицинской наркологической клинике в Москве
        .top-block__items
          a(href="#").top-block__link Срочный вывод из запоя на дому
          a(href="#").top-block__link Кодирование от наркомании
          a(href="#").top-block__link Кодирование от алкоголизма
          a(href="#").top-block__link Лечение депрессии и психозов

      .top-block__form
        .top-block__form-bg.b-lazy.webp-img(data-webp="./img/top-romb-bg.webp" data-img="./img/top-romb-bg.png")
        .top-block__form-inner
          .top-block__form-title Оставить заявку <b>НА БЕСПЛАТНУЮ</b> консультацию нарколога
          form.top-block__form-i
            input(type="text" placeholder="Ваше имя")
            input(type="text" placeholder="+7 (___) ___-__-__")
            a(href="#").top-block__form-btn.site-btn--red отправить
          .top-block__form-capt Ваши данные не попадут к третьим лицам и останутся конфиденциальны.

      .site-widget
        .site-widget__inner
          .site-widget__top
            .site-widget__img
            .site-widget__name Владимир
              span Консультант
          .site-widget__desc Добрый день! Готов ответить на Ваши вопросы.
          .site-widget__bottom
            .site-widget__input
              input(type="text" placeholder="Введите Ваше сообщение...")

        a(href="").site-widget__btn

